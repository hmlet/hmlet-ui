{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "stripInternal": true,

    "jsx": "react-jsx"
  },
  "include": ["src/index.ts", "src/components/ui/**/*", "src/tokens/**/*"]
}
